@model Cajovna.Models.Surovina

<div id="breadcrumbs">
    <a href="@Url.Action("Index", "Suroviny")"><img src="~/Content/Images/arrow_back.png" height="20" width="20" alt="o úroveň výš" /></a>
    @Html.ActionLink("Admin", "Admin", "Home")
    >>
    @Html.ActionLink("Suroviny", "Index", "Suroviny")
    >>
    @Html.ActionLink("Surovina #" + Model.surovinaID, "Detail", "Suroviny", new { id = Model.surovinaID }, null)
</div>
<h2>@Model.name<small>(Surovina #@Model.surovinaID - @Html.ActionLink("Editovat", "Edit", "Suroviny", new { id = Model.surovinaID }, null) - @Html.ActionLink("Smazat", "Delete", "Suroviny", new { id = Model.surovinaID }, null))</small></h2>
<table id="detail">
    <tr>
        <th>Popis:</th>
        <td>
            @Model.desription
        </td>
    </tr>
    <tr>
        <th>Cena&nbsp;za&nbsp;jednotku:</th>
        <td>@(Model.price)&nbsp;CZK / @Model.number_of_units @Model.unit.ToString()</td>
    </tr>
    <tr>
        <th>Datum&nbsp;přidání:</th>
        <td>@Model.date_added.ToString("dd\\/M\\/yyyy")</td>
    </tr>
</table>