@model Cajovna.Models.Ucet

<div id="breadcrumbs">
    <a href="@Url.Action("Index", "Ucet")"><img src="~/Content/Images/arrow_back.png" height="20" width="20" alt="o úroveň výš" /></a>
    @Html.ActionLink("Admin", "Admin", "Home")
    >>
    @Html.ActionLink("Stoly", "Index", "Stul")
    >>
    @Html.ActionLink("Stůl", "Detail", "Stul", new { id = ViewBag.stulID }, null)
    >>
    @Html.ActionLink("Vytvořit účet", "Add", "Ucet", new { id = ViewBag.stulID }, null)
</div>
<h2>Vytvořit účet</h2>
<form action="/Ucet/Add" method="post">
    <input type="hidden" name="stulID" value="@ViewBag.stulID" />

    <label for="name">Název</label>
    <input type="text" name="name" value="" />
    <br />
    <input type="submit" value="Vytvořit" />
</form>